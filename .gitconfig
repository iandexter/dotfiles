[user]
    name = Ian Dexter D Marquez
    email = iandexter@users.noreply.github.com
    logallrefupdates = true
    signingkey = 0x28435237CD6D36E8
[core]
    excludesfile = /Users/iandexter/.gitignore
    editor = vim
[alias]
    ci = commit
    co = checkout
    lo = log --oneline --decorate
    ld = log --pretty=format:\"%ad %C(yellow)%h %Cred%d %Creset%s%Cblue [%cn]\" --decorate --date=relative
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    st = status
    up = "!git remote update && git co master && git pull --rebase --prune"
    fu = "!git fetch upstream && git co master && git merge upstream/master"
    fp = fetch -p origin
    fr = "!git fetch origin master && git rebase origin/master"
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[format]
    pretty = oneline
[push]
    default = simple
[commit]
    gpgsign = true
